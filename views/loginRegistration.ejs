<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Registration</title>
    <link rel="stylesheet" href="css/loginRegistration.css">
</head>
<body>

    <header>
        <h2 class="logo">LOGO</h2>
        <nav class="navigation">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Contact</a>
            <button class="btn-LoginPopup">Login</button> 
        </nav>
    </header>

    <% if (typeof errorMessageRegistration !== 'undefined'){ %>
    <div class="wrapper active-popup active">
    <% } else if (typeof errorMessageLogin !== 'undefined'){ %>
    <div class="wrapper active-popup">
    <% } else { %>
    <div class="wrapper">
    <% } %>
        <span class="icon-close">
            <ion-icon name="close-outline"></ion-icon>
        </span>
        <div class="form-box login">
            <h2>Login</h2>
            <form action="/login" method="POST">
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                    <input type="text" name="username" required>
                    <label>Username/E-mail</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></ion-icon></span>
                    <input type="password" name="password" required maxlength="20" id="typepass">
                    <label>Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input name="rememberMe" value=1 type="checkbox">Remember me</label>
                    <label for="show_pass"><input type="checkbox" id="show_pass" name="show_pass" onclick="Toggle()">Show password</label>  
                </div>
                <% if (typeof errorMessageLogin !== 'undefined'){ %>
                <div class="error">
                    <p><%= errorMessageLogin %></p>
                </div>
                    <% } %>
                <button type="submit" class="btn">Login</button>
                <div class="login-register">
                    <p>
                        Dont have an account? <a href="#" class="register-link">Register</a>
                    </p>
                </div>
            </form>
        </div>

        <div class="form-box register">
            <h2>Registration</h2>
            <form action="/register" method="POST">
                <div class="input-box">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></ion-icon></span>
                    <input type="text" name="username" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                    <input type="email" name="email" required>
                    <label>E-mail</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></ion-icon></span>
                    <input type="password" name="password" required maxlength="20">
                    <label>Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox" required>I agree to terms and conditions</label>
                </div>
                <% if (typeof errorMessageRegistration !== 'undefined'){ %>
                <div class="error">
                    <p><%= errorMessageRegistration %></p>
                </div>
                <% } %>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>
                        Already have an account? <a href="#" class="login-link">Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="/javascript/loginRegistration.js"></script>    
</body>
</html>

